<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/title_layout" />

    <com.jsmt.developer.view.BaseScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/jianbian_color"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:layout_marginTop="24dp"
                    android:paddingEnd="16dp">
                    <TextView
                        android:id="@+id/tv_ddzt_ts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:drawablePadding="12dp"
                        android:drawableLeft="@drawable/dengdai_time"
                        android:text="等待买家付款"
                        android:textColor="@color/white"/>
                    <TextView
                        android:id="@+id/tv_ddzt_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:visibility="visible"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:drawablePadding="12dp"
                        android:text="剩0小时00分自动关闭"
                        android:textColor="@color/white"/>
                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="63dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="95dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    android:paddingTop="19dp"
                    android:background="@drawable/my_white_10_bg"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/address_icon"
                        android:layout_marginStart="10dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginEnd="22dp"
                        android:layout_marginStart="15dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_name_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name  176****0000"
                            android:textSize="14dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/tv_address_sh"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="地址："
                            android:layout_marginTop="12dp"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:textSize="12dp"
                            android:textColor="@color/text3"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_shop"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:layout_height="39dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/shop_icon"/>
                    <TextView
                        android:id="@+id/tv_shopName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:textColor="@color/text3"
                        android:text="ShopName"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/right_jt_icon"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_shopping"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/line">

                    </android.support.v7.widget.RecyclerView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_ddbh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="订单编号：71854143640"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textSize="13dp"
                        android:textColor="@color/text3"
                        />
                    <TextView
                        android:id="@+id/tv_xdTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="下单时间：2018-03-07 11:36:08"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_marginTop="14dp"
                        android:layout_marginBottom="14dp"
                        android:textSize="13dp"
                        android:textColor="@color/text3"
                        />
                    <TextView
                        android:id="@+id/tv_psfs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="配送方式：普通快递"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textSize="13dp"
                        android:textColor="@color/text3"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/line"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="商品总计"
                            android:textSize="13dp"
                            android:textColor="@color/text3"
                            />
                        <TextView
                            android:id="@+id/tv_spAll_Price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+￥0.00"
                            android:layout_alignParentEnd="true"
                            android:textSize="13dp"
                            android:textColor="@color/text3" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="运费总计"
                            android:textSize="13dp"
                            android:textColor="@color/text3"
                            />
                        <TextView
                            android:id="@+id/tv_yf_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+￥0.00"
                            android:layout_alignParentEnd="true"
                            android:textSize="13dp"
                            android:textColor="@color/text3" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="优惠总计"
                            android:textSize="13dp"
                            android:textColor="@color/text3"
                            />
                        <TextView
                            android:id="@+id/tv_yhzk"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-￥0.00"
                            android:layout_alignParentEnd="true"
                            android:textSize="13dp"
                            android:textColor="@color/text3" />
                    </RelativeLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:paddingEnd="16dp"
                    android:gravity="center_vertical|right"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_shopping_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="共 30 件商品 合计:"
                        android:layout_alignParentEnd="true"
                        android:textSize="12dp"
                        android:textColor="@color/text3" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥"
                        android:layout_alignParentEnd="true"
                        android:textSize="12dp"
                        android:textColor="@color/my_red" />
                    <TextView
                        android:id="@+id/tv_all_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:layout_alignParentEnd="true"
                        android:textSize="15dp"
                        android:textColor="@color/my_red" />
                    <TextView
                        android:id="@+id/tv_yunwei"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="（含运费¥0.00）"
                        android:layout_alignParentEnd="true"
                        android:textSize="12dp"
                        android:textColor="@color/text3" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/line"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/ll_lx_kf"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                       android:orientation="horizontal" >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="联系卖家"
                            android:textSize="14dp"
                            android:gravity="center"
                            android:drawablePadding="14dp"
                            android:layout_centerInParent="true"
                            android:drawableLeft="@drawable/red_kefu_icon"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_bd_phone"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal" >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="拨打电话"
                            android:textSize="14dp"
                            android:gravity="center"
                            android:drawablePadding="14dp"
                            android:layout_centerInParent="true"
                            android:drawableLeft="@drawable/red_bdphone_icon"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
    </com.jsmt.developer.view.BaseScrollView>
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical|right"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_text1"
            android:layout_width="75dp"
            android:layout_height="28dp"
            android:gravity="center"
            android:background="@drawable/my_order_stroke1"
            android:textColor="@color/order_text"
            android:layout_marginEnd="10dp"
            android:text="取消订单"
            android:textSize="13dp"/>
        <TextView
            android:id="@+id/tv_text_remove"
            android:layout_width="75dp"
            android:layout_height="28dp"
            android:gravity="center"
            android:background="@drawable/my_order_stroke1"
            android:textColor="@color/order_text"
            android:layout_marginEnd="10dp"
            android:text="删除订单"
            android:textSize="13dp"/>
        <TextView
            android:id="@+id/tv_text2"
            android:layout_width="75dp"
            android:layout_height="28dp"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginEnd="10dp"
            android:background="@drawable/my_order_stroke1"
            android:textColor="@color/order_text"
            android:text="查看物流"
            android:textSize="13dp"/>
        <TextView
            android:id="@+id/tv_text3"
            android:layout_width="75dp"
            android:layout_height="28dp"
            android:gravity="center"
            android:visibility="gone"
            android:background="@drawable/my_order_stroke1"
            android:textColor="@color/order_text"
            android:text="提醒发货"
            android:textSize="13dp"/>
        <TextView
            android:id="@+id/tv_red_right"
            android:layout_width="75dp"
            android:layout_height="28dp"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginStart="10dp"
            android:background="@drawable/my_order_stroke_red1"
            android:textColor="@color/my_red2"
            android:text="申请发货"
            android:textSize="13dp"/>
        <TextView
            android:id="@+id/tv_red_rightpj"
            android:layout_width="75dp"
            android:layout_height="28dp"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginStart="10dp"
            android:background="@drawable/my_order_stroke_red1"
            android:textColor="@color/my_red2"
            android:text="评价"
            android:textSize="13dp"/>
        <TextView
            android:id="@+id/tv_red_qrsh"
            android:layout_width="75dp"
            android:layout_height="28dp"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginStart="10dp"
            android:background="@drawable/my_order_stroke_red1"
            android:textColor="@color/my_red2"
            android:text="确认收获"
            android:textSize="13dp"/>
    </LinearLayout>

</LinearLayout>