<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/line"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/title_layout" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/my_grxx_bg"
        android:layout_margin="16dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/ll_image_xg"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_height="81dp">
            <com.tem.gettogether.view.CircularImage
                android:id="@+id/iv_head"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@mipmap/myy322x"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/xiugaitouxiang"
                android:layout_marginStart="20dp"
                android:textColor="@color/text9"
                android:textSize="15dp"/>

            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="0dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:src="@drawable/right_more"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line"/>

        <LinearLayout
            android:id="@+id/ll_name_xg"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:layout_height="58dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nicheng"
                android:textColor="@color/my_grxx_text"
                android:textSize="15dp"/>
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="57dp"
                android:layout_marginEnd="14dp"
                android:text="Name"
                android:textColor="@color/text3"
                android:textSize="15dp"/>
            <ImageView
                android:id="@+id/iv_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/right_more"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:paddingEnd="16dp"
            android:gravity="center_vertical"
            android:layout_height="58dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zhanghao"
                android:layout_centerVertical="true"
                android:textColor="@color/my_grxx_text"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/tv_zhanghao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="57dp"
                android:layout_marginEnd="14dp"
                android:text=" "
                android:textColor="@color/text3"
                android:textSize="15dp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:paddingEnd="16dp"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:layout_height="58dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="身份证号"
                android:layout_centerVertical="true"
                android:textColor="@color/my_grxx_text"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/tv_sfzh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="30dp"
                android:text=" "
                android:textColor="@color/text3"
                android:textSize="15dp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
