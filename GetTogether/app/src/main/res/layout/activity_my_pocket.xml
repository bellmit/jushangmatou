<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/line"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/title_layout" />

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="105dp"
       android:layout_marginStart="16dp"
       android:layout_marginEnd="16dp"
       android:layout_marginTop="11dp"
       android:background="@drawable/my_yellow_wallet10_bg">
       <TextView
           android:id="@+id/tv_yuE"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="16dp"
           android:layout_marginStart="16dp"
           android:layout_marginTop="15dp"
           android:text="余额"
           android:textColor="@color/white"/>
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginStart="20dp"
           android:layout_marginTop="10dp"
           android:layout_below="@+id/tv_yuE"
           android:orientation="horizontal">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="15dp"
               android:text="￥"
               android:textColor="@color/white"/>
           <TextView
               android:id="@+id/tv_yE_money"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="25dp"
               android:text="0.00"
               android:textStyle="bold"
               android:textColor="@color/white"/>

       </LinearLayout>
       <RelativeLayout
           android:layout_width="63dp"
           android:layout_height="25dp"
           android:background="@drawable/my_qb_guize"
           android:layout_alignParentEnd="true"
           android:layout_marginTop="24dp">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="12dp"
               android:drawableLeft="@drawable/guze"
               android:layout_centerInParent="true"
               android:drawablePadding="6dp"
               android:text="规则"
               android:textColor="@color/my_yellow"/>
       </RelativeLayout>

   </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/my_bs_wallet10_bg">
        <LinearLayout
            android:id="@+id/ll_chognzhi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:drawableLeft="@drawable/chongzhi"
                android:layout_centerInParent="true"
                android:drawablePadding="7dp"
                android:text="充值"
                android:textColor="@color/text3"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_tixian"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:drawableLeft="@drawable/tixian"
                android:layout_centerInParent="true"
                android:drawablePadding="7dp"
                android:text="提现"
                android:textColor="@color/text3"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_zhaq"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_height="44dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="充值记录"
            android:layout_centerVertical="true"
            android:textColor="@color/text3"
            android:textSize="15dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/right_more"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line"/>
    <RelativeLayout
        android:id="@+id/rl_tixian"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_height="44dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提现记录"
            android:layout_centerVertical="true"
            android:textColor="@color/text3"
            android:textSize="15dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/right_more"/>
    </RelativeLayout>
</LinearLayout>
