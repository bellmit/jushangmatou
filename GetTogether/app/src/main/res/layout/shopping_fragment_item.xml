<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="10dp">
    <LinearLayout
        android:id="@+id/ll_All_item"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/my_zj_bg"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="99dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/myy322x"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_shoping_jj"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="DIV小屋手工制作手工拼装模型创意玩具小房别墅生日礼物"
                android:layout_weight="1"
                android:textSize="13dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@color/text3" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥0.00"
                    android:textSize="12dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/home_red"
                     />
                <TextView
                    android:id="@+id/tv_qpl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_20"
                    android:text="300件起批"
                    android:textSize="14dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/text6"
                    />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>