<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="12dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/myy322x" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="商品满意度"
                android:textColor="@color/text3"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_item_xx1"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/pingjiaxx"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/pingj_xx" />

                <ImageView
                    android:id="@+id/iv_item_xx2"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/pingjiaxx"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/pingj_xx" />

                <ImageView
                    android:id="@+id/iv_item_xx3"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/pingjiaxx"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/pingj_xx" />

                <ImageView
                    android:id="@+id/iv_item_xx4"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/pingjiaxx"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/pingj_xx" />

                <ImageView
                    android:id="@+id/iv_item_xx5"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/pingjiaxx"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/pingj_xx" />
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_xingji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="非常好"
                android:textColor="@color/text9"
                android:textSize="13dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp">

            <EditText
                android:id="@+id/et_pjContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请输入评价内容"
                android:padding="12dp"
                android:textColor="@color/text6"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="12dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最多添加9张图片"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/text6"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="10dp"
            android:background="@color/line" />

    </LinearLayout>
    </RelativeLayout>

</LinearLayout>