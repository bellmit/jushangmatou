<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_shop"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_height="39dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/shop_icon"/>
        <TextView
            android:id="@+id/tv_shopName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textColor="@color/text3"
            android:text="桃花驿丰物店"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/right_jt_icon"/>
        <TextView
            android:id="@+id/tv_right_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textColor="@color/my_red2"
            android:layout_weight="1"
            android:text="交易成功"
            android:textSize="13dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/line"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical|right"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_shopping_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/order_text"
            android:text="共1 件商品 合计:￥"
            android:textSize="13dp"/>
        <TextView
            android:id="@+id/tv_all_peice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/order_text"
            android:text="100.00（含运费¥0.00）"
            android:textSize="15dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:background="@color/line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical|right"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_text1"
            android:layout_width="75dp"
            android:layout_height="28dp"
            android:gravity="center"
            android:background="@drawable/my_order_stroke1"
            android:textColor="@color/order_text"
            android:layout_marginEnd="10dp"
            android:text="取消订单"
            android:textSize="13dp"/>
        <TextView
            android:id="@+id/tv_textRemov"
            android:layout_width="75dp"
            android:layout_height="28dp"
            android:gravity="center"
            android:background="@drawable/my_order_stroke1"
            android:textColor="@color/order_text"
            android:layout_marginEnd="10dp"
            android:text="删除订单"
            android:textSize="13dp"/>
        <TextView
            android:id="@+id/tv_text2"
            android:layout_width="75dp"
            android:layout_height="28dp"
            android:gravity="center"
            android:layout_marginEnd="10dp"
            android:visibility="gone"
            android:background="@drawable/my_order_stroke1"
            android:textColor="@color/order_text"
            android:text="查看物流"
            android:textSize="13dp"/>
        <TextView
            android:id="@+id/tv_text3"
            android:layout_width="75dp"
            android:layout_height="28dp"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginEnd="10dp"
            android:background="@drawable/my_order_stroke1"
            android:textColor="@color/order_text"
            android:text="提醒发货"
            android:textSize="13dp"/>
        <TextView
            android:id="@+id/tv_red_right"
            android:layout_width="75dp"
            android:layout_height="28dp"
            android:gravity="center"
            android:visibility="gone"
            android:background="@drawable/my_order_stroke_red1"
            android:textColor="@color/my_red2"
            android:text="确认收货"
            android:textSize="13dp"/>
        <TextView
            android:id="@+id/tv_red_rightpj"
            android:layout_width="75dp"
            android:layout_height="28dp"
            android:gravity="center"
            android:visibility="gone"
            android:background="@drawable/my_order_stroke_red1"
            android:textColor="@color/my_red2"
            android:text="评价"
            android:textSize="13dp"/>
        <TextView
            android:id="@+id/tv_red_right_fk"
            android:layout_width="75dp"
            android:layout_height="28dp"
            android:gravity="center"
            android:visibility="gone"
            android:background="@drawable/my_order_stroke_red1"
            android:textColor="@color/my_red2"
            android:text="立即付款"
            android:textSize="13dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/line"/>
</LinearLayout>