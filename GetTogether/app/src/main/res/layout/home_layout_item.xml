<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"

        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_bktj_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingBottom="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="化妆品"
                    android:gravity="center"
                    android:maxLines="1"
                    android:enabled="true"
                    android:textColor="@color/black"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/tv_name_dec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:maxLines="1"
                    android:visibility="gone"
                    android:enabled="true"
                    android:text="亲近你的肌肤"
                    android:textColor="#9e9e9e"
                    android:textSize="12dp" />

                <ImageView
                    android:id="@+id/iv_left_image"
                    android:layout_width="match_parent"
                    android:layout_height="180px"
                    android:layout_marginStart="8px"
                    android:layout_marginEnd="8px"
                    android:layout_marginTop="10dp"
                    android:src="@mipmap/myy322x" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingStart="5dp"
                android:paddingEnd="8dp"
                android:visibility="gone"
                android:gravity="bottom">

                <ImageView
                    android:id="@+id/iv_right_image"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/myy322x" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/view_line_right"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="@color/line" />

    </LinearLayout>

    <View
        android:id="@+id/view_line_bo"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:visibility="gone"
        android:background="@color/line" />


</LinearLayout>