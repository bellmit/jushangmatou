<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:visibility="visible"
            android:background="@color/text9"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_tj"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_tj"
                    android:layout_width="43dp"
                    android:layout_height="20dp"
                    android:textColor="@color/home_red"
                    android:background="@drawable/shopshopping_9dp_b"
                    android:text="推荐"
                    android:gravity="center"
                    android:textSize="13dp"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_xl"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_xl"
                    android:layout_width="43dp"
                    android:layout_height="20dp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:text="销量"
                    android:textSize="13dp"/>
            </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_xp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_xp"
                android:layout_width="43dp"
                android:layout_height="20dp"
                android:textColor="@color/white"
                android:text="新品"
                android:gravity="center"
                android:textSize="13dp"/>
        </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_qpl"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <LinearLayout
                    android:id="@+id/ll_qpl_bg"
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_qpl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="4dp"
                        android:drawableRight="@drawable/pifaliang"
                        android:gravity="center"
                        android:text="起批量"
                        android:textColor="@color/white"
                        android:textSize="13dp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

    <cn.bingoogolapple.refreshlayout.BGARefreshLayout
        android:id="@+id/shopping_order_refresh_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.tem.gettogether.view.BaseScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:visibility="gone"
                        android:background="@color/my_yellow"/>
                </RelativeLayout>
                <com.tem.gettogether.view.powerfulrecyclerview.HomeListFreshRecyclerView
                    android:id="@+id/shopping_order_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingEnd="6dp"/>
            </FrameLayout>
            <LinearLayout
                android:id="@+id/ll_look_more"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/line"/>
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:src="@drawable/home_xq_sl"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:textColor="@color/text3"
                    android:text="点击查看更多"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/line"/>
            </LinearLayout>
            </LinearLayout>

        </com.tem.gettogether.view.BaseScrollView>
    </cn.bingoogolapple.refreshlayout.BGARefreshLayout>
</LinearLayout>