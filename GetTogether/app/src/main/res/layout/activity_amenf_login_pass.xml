<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/line"
    android:orientation="vertical">

    <include layout="@layout/title_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColorHint="@color/text3"
            android:text="@string/yuanmima"/>

            <EditText
                android:id="@+id/et_old_pass"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:padding="13dp"
                android:background="@color/white"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:inputType="textPassword"
                android:maxLength="20"
                android:textSize="15dp"
                android:textColor="@color/text3"
                android:textColorHint="@color/text9"
                android:hint="@string/yuanmima"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColorHint="@color/text3"
            android:text="@string/new_pass"/>

        <EditText
            android:id="@+id/et_new_pass"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:padding="13dp"
            android:background="@color/white"
            android:paddingStart="16dp"
            android:inputType="textPassword"
            android:maxLength="20"
            android:paddingEnd="16dp"
            android:textSize="15dp"
            android:textColor="@color/text3"
            android:textColorHint="@color/text9"
            android:hint="@string/new_pass"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColorHint="@color/text3"
            android:text="@string/queren_padd"/>

        <EditText
            android:id="@+id/et_new_pass2"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:padding="13dp"
            android:background="@color/white"
            android:paddingStart="16dp"
            android:inputType="textPassword"
            android:maxLength="20"
            android:paddingEnd="16dp"
            android:textSize="15dp"
            android:textColor="@color/text3"
            android:textColorHint="@color/text9"
            android:hint="@string/queren_padd"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColorHint="@color/text3"
            android:text="@string/mima_qufen"/>
        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:text="@string/queding"
            android:background="@drawable/my_pay_red_bg"/>

    </LinearLayout>

</LinearLayout>
