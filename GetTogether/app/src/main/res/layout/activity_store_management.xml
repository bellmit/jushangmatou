<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <RelativeLayout
            android:id="@+id/rl_close"
            android:layout_width="60dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:src="@drawable/left_close"/>
        </RelativeLayout>
        <TextView

            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text3"
            android:layout_centerInParent="true"
            android:textSize="16dp"
            android:text="Title"/>

        <RelativeLayout
            android:id="@+id/rl_title_right"
            android:layout_width="80dp"
            android:layout_alignParentEnd="true"
            android:paddingEnd="16dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_title_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_centerVertical="true"
                android:textColor="@color/my_yellow"
                android:textSize="14dp"
                android:text="开通会员"/>
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/title_line"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:paddingStart="55dp"
        android:paddingEnd="55dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_cpgl"
            android:layout_width="85dp"
            android:layout_height="35dp"
            android:textColor="@color/white"
            android:text="产品管理"
            android:textSize="14dp"
            android:gravity="center"
            android:background="@drawable/dpgl_add5"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_dpxx"
            android:layout_width="85dp"
            android:layout_height="35dp"
            android:textColor="@color/white"
            android:text="店铺信息"
            android:textSize="14dp"
            android:gravity="center"
            android:background="@drawable/dpgl_5"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/tv_fbcp"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:textSize="16dp"
        android:layout_gravity="center"
        android:layout_marginBottom="40dp"
        android:textColor="@color/white"
        android:text="发布产品"
        android:gravity="center"
        android:background="@drawable/dpgl_save_20"/>

</LinearLayout>
