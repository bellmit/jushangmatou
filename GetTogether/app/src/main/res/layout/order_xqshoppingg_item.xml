<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item_dd"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:orientation="horizontal">
    <com.jsmt.developer.view.RoundImageView
        android:id="@+id/iv_image_shopping"
        android:layout_width="80dp"
        android:scaleType="centerCrop"
        android:layout_height="80dp"
        android:src="@mipmap/myy322x"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/tv_shopping_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textSize="14dp"
            android:text="新生儿彩棉斜襟上衣加裤子宝宝衣衣加裤子衣加裤子"
            android:textColor="@color/text3"
            android:ellipsize="end"/>
        <TextView
            android:id="@+id/tv_shopping_qpl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textSize="12dp"
            android:text="0件起批"
            android:layout_marginTop="7dp"
            android:textColor="@color/text9"
            android:ellipsize="end"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="right"
        android:layout_marginStart="18dp">

        <TextView
            android:id="@+id/tv_shopping_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:maxLength="9"
            android:textSize="13dp"
            android:text="¥0.00/件"
            android:textColor="@color/text3"
            android:ellipsize="end"/>
        <TextView
            android:id="@+id/tv_shoping_Num"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:maxLines="2"
            android:gravity="center_vertical"
            android:textSize="12dp"
            android:text="共0件"
            android:textColor="@color/text9"
            android:ellipsize="end"/>

    </LinearLayout>

</LinearLayout>