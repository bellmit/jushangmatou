<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center_horizontal"
    android:orientation="horizontal">

    <View
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:background="@color/transparent" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="7"
        android:background="@drawable/layout_dialog_theme_shape"
        android:gravity="center_horizontal"
        android:minWidth="250dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_dialog_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tv_dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:text="提示"
                android:textColor="#000000"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:id="@+id/v_line"
            style="@style/Divider1dp" />

        <LinearLayout
            android:id="@+id/ll_dialog_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fadingEdge="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_dialog_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="13dp"
                        android:layout_marginTop="13dp"
                        android:gravity="center_horizontal|left"
                        android:lineSpacingMultiplier="1.3"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:text=""/>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>


        <View style="@style/Divider1dp" />

        <LinearLayout
            android:id="@+id/ll_dialog_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="45dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_dialog_btn1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:padding="6dp"
                android:text="确定"
                android:textColor="#666666"
                android:textSize="16sp" />

            <View
                android:id="@+id/line2_dialog"
                style="@style/Divider1dp_portrait"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_dialog_btn2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:padding="6dp"
                android:text="取消"
                android:textColor="#fffc594c"
                android:textSize="16sp"
                android:visibility="gone" />

            <View
                android:id="@+id/line3_dialog"
                style="@style/Divider1dp_portrait"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_dialog_btn3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:padding="6dp"
                android:text="取消"
                android:textColor="#fffc594c"
                android:textSize="16sp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:background="@color/transparent" />
</LinearLayout>
