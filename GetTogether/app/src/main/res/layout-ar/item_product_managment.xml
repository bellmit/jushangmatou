<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="7dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="7dp"
    android:layout_marginBottom="@dimen/dp_10"
    android:layoutDirection="rtl"
    android:paddingStart="@dimen/dp_10"
    android:paddingTop="@dimen/dp_10"
    android:paddingEnd="@dimen/dp_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/my_zj_bg"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_item"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/myy322x" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:text="DIV小屋手工制作手工拼装模型创意玩创"
                    android:textColor="@color/text3"
                    android:textDirection="locale"
                    android:textSize="13dp" />


                <TextView
                    android:id="@+id/tv_Shop_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="￥1.00"
                    android:textColor="@color/text3"
                    android:textDirection="locale"
                    android:textSize="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_shuoming"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10件"
                        android:textColor="@color/text6"
                        android:textDirection="locale"
                        android:textSize="12dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal"
                android:padding="@dimen/dp_10">

                <TextView
                    android:id="@+id/shelf_tv"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/dpgl_add5"
                    android:gravity="center"
                    android:text="@string/shelf"
                    android:textColor="@color/white"
                    android:textDirection="locale"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/obtained_tv"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/dpgl_add5"
                    android:gravity="center"
                    android:text="@string/obtained"
                    android:textColor="@color/white"
                    android:textDirection="locale"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/edit_tv"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/dpgl_add5"
                    android:gravity="center"
                    android:text="@string/bianji"
                    android:textColor="@color/white"
                    android:textDirection="locale"
                    android:textSize="12dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/delete_tv"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/dpgl_add5"
                    android:gravity="center"
                    android:text="@string/delete"
                    android:textColor="@color/white"
                    android:textDirection="locale"
                    android:textSize="12dp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
